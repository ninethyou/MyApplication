<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_orderTime_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="202020 20-20-20"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/textView_orderNo_item"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_orderNo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No.1"
        android:textSize="17dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_orderFood_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/textView_orderNo_item"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textView_orderCount_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 1"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@id/textView_orderPrice_item"
        app:layout_constraintLeft_toRightOf="@id/textView_orderFood_item"/>

    <TextView
        android:id="@+id/textView_orderPrice_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/textView_orderFood_item"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_addreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 작성"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>